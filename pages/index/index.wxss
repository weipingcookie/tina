.lb-image-box {
  width: 100%;
  height: 384rpx;
}

swiper swiper-item image {
  width: 100%;
}

.nav-box {
  display: flex;
  justify-content: space-around;
  padding-top: 20rpx;
}

.nav-icon {
  width: 74rpx;
  height: auto;
  display: block;
  text-align: center;
  margin: 0 auto;
}

.nav-item {
  font-family: "黑体";
  font-size: 32rpx;
  color: #364662;
  text-align: center;
}

.pay-deliver {
  width: 90%;
  margin: 0 auto;
  padding: 10rpx 0;
  position: relative;
  height: 200rpx;
}

.pay-deliver .paybg {
  position: absolute;
  z-index: -1;
  width: 100%;
  height: 100%;
}

.pay  image {
  width: 60rpx;
  height: 60rpx;
  margin-right: 15rpx;
}

.deliver image {
  width: 66rpx;
  height: 66rpx;
  margin-right: 15rpx;
}

.pd-box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 220rpx;
}

.pay {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-left: 24rpx;
}

.deliver {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-right: 54rpx;
}

.pd-title text {
  display: block;
  text-align: center;
  font-family: "黑体";
  color: #364662;
  font-size: 28rpx;
}

.pd-title text:first-child {
  font-size: 56rpx;
}

.middle-logo-box {
  width: 90%;
  margin: 0 auto;
  margin-top: 20rpx;
  overflow: hidden;
}

.middle-logo-box image {
  width: 100%;
}

.hotsell-title {
  text-align: center;
  width: 100%;
  margin-top: 30rpx;
}

.hotsell-title image {
  width: 300rpx;
}

.hot-sell-item {
  display: flex;
  justify-content: space-between;
  width: 95%;
  margin: 0 auto;
}

.item-left {
  position: relative;
  width: 60%;
  overflow: hidden;
  height: 310rpx;
}

.item-left image {
  /* width:100%; */
}

.item-right {
  width: 40%;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-top: 20rpx;
}

.item-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 20;
}

.item-img {
  position: absolute;
  width: 330rpx;
  height: 230rpx;
  top: 55rpx;
  left: 30rpx;
}

.right-title {
  font-size: 40rpx;
  text-align: center;
  color: #053860;
}

.right-desc {
  color: #053860;
  font-size: 24rpx;
}

.right-bottom-box {
  padding: 0 20% 0 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.rb-price {
  font-size: 50rpx;
  color: #e60012;
}

.rb-price-cart {
  color: #053860;
  font-size: 50rpx;
}

.xp-left {
  width: 50%;
}

.xp-right {
  width: 50%;
}

.xp-foods-img {
  width: 250rpx;
  height: 175rpx;
  top: 67rpx;
  left: 20rpx;
  z-index: 30;
}

.rb-sub {
  color: #e60012;
}

.xp-btm-box {
  margin-left: 21%;
  margin-right: -5%;
}


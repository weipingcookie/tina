@import "../../common/css/icon.wxss";
@import "../../common/css/common.wxss";

.add-address {
  width: 300rpx;
  height: 80rpx;
  margin: 0 auto;
  position: relative;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  font-size: 34rpx;
  margin-top: 60rpx;
  margin-bottom: 50rpx;
}

.add-address image {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: -1;
}

.redact-box {
  width: 90%;
  margin-top: 70rpx;
  padding: 0 5%;
}

.redact-item {
  margin: 10rpx 0;
}

.redact-item text {
  font-size: 32rpx;
  color: #000;
}

.redact-item input {
  font-size: 28rpx;
}

.redact-inline{
  display: flex;
  justify-content: space-between;
  align-items: center;
}

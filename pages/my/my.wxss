@import "../../common/css/icon.wxss";
@import "../../common/css/common.wxss";

.avatar-box{
  width:100%;
  overflow: hidden;
  margin-top: 40rpx;
}
.avatar{
  width:140rpx;
  height:126rpx;
  margin:0 auto;
  position: relative;
  overflow: hidden;
}
.avatar image.abg{
  width:100%;
  height:100%;
  position: absolute;
  top:0;
  left:0;
}
.avatar image.useravatar{
  width:100%;
  height:100%;
  border-radius: 50%;
}
.username{
  width:100%;
  text-align: center;
  color:#053860;
  font-size:28rpx;
  margin-top: 10rpx;
}
.club-card-box{
  width:100%
  
}
.club-card{
  position: relative;
  width:440rpx;
  height:280rpx;
  margin: 0 auto;
  margin-top: 20rpx;
}
.club-card image{
  position: absolute;
  width:100%;
  height:100%;
  top:0;
  left:0;
}
.clubcard-number{
  position: absolute;
  bottom:1%;
  right:1%;
  color:#053860;
  font-size:28rpx;
}
.clubcardyue{
  font-size:28rpx;
  color:#053860;
  text-align: center;
  margin-top: 10rpx;
  padding-bottom:10rpx;

}
.yue-style{
  color:#fd8701;
  font-size:40rpx;
}
.userinfo-item{
  font-size:30rpx;
  color:#053860;
  display: flex;
  align-items: center;
  width:80%;
  padding: 0 5%;
  margin: 0 auto;
  border-bottom:2rpx solid #053860;
  padding-bottom: 10rpx;
  padding-top: 10rpx;
}
.user-icon{
  font-size:40rpx;
  color:#fd8701;
  margin-right: 10rpx;
  font-weight: bold;
}
.item-first{
  border-top:2rpx solid #053860;
  padding-top: 10rpx;
  margin-top: 10rpx;
}
.login{
  width:140rpx;
  height:126rpx;
  border-radius: 50%;
  outline: none;
  background: #dbeaf7;
  line-height: 126rpx;
  border:1rpx solid #053860;
  font-size:32rpx;
}
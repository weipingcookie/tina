@import "../../common/css/icon.wxss";
@import "../../common/css/common.wxss";
.order-nav{
  width:50%;
  display: flex;
  justify-content: space-between;
  padding: 3%;
  align-items: center;
}
.order-icon{
  font-size:40rpx;
  color:#053860;
  margin-right: 10rpx;
}
.font-title{
  font-size:28rpx;
  color:#053860;
}
.nav-box{
  padding:5rpx 20rpx;
  border-radius: 60rpx;
  display: flex;
  align-items: center;
  border:2rpx solid #fa0;
}
.select{
  background: #fff;
}
.order-data-box{
  width:90%;
  margin: 0 auto;
  margin-top: 30rpx;
}
.order-item-box{
  display: flex;
  justify-content: flex-start;
  margin-bottom: 30rpx;
  align-items: flex-start;
  padding-bottom:20rpx;
  border-bottom:2rpx solid #053860;
}
.order-image{
  width:144rpx;
  height:144rpx;
  margin-right: 22rpx;
  overflow: hidden;
}
.order-image image{
  width:100%;
  height:100%;
}
.order-title{
  display: flex;
  justify-content: space-between;
  font-size:34rpx;
  color:#053860;
  align-items: center;
}
.order-right-box{
  flex: 1;
}
.order-time{
  font-size:26rpx;
  color:#024274;
}
.order-detail{
  font-size:32rpx;
  color:#053860;
  display: flex;
  justify-content: space-between;
  margin-top: 10rpx;
}
.order-again{
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin-top: 20rpx;
}
.order-again view{
  width:150rpx;
  height:40rpx;
  border-radius: 30rpx;
  border:2rpx solid #053860;
  text-align: center;
  font-size:24rpx;
  line-height: 40rpx;
  color:#053860;
}
.order-state{
  font-size:28rpx;
}
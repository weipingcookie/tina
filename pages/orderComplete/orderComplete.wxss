@import "../../common/css/icon.wxss";
@import "../../common/css/common.wxss";
.order-title{
  width:100%;
  text-align: center;
  padding-bottom: 30rpx;
  border-bottom:2rpx solid #000;
  margin: 0 auto;
    margin-top:30rpx;
}
.number{
  color:#ff8800;
}
.list-title{
  text-align: center;
  font-size:40rpx;
  margin:30rpx 0;
  color:#ff8800;
}
.detail{
  text-align: right;
  font-size:28rpx;
  padding-right: 30rpx;
  padding-bottom: 10rpx;
  border-bottom:2rpx solid #000;
}
.content-box{
  width:90%;
  margin: 0 auto;
}
.order-info{
  display: flex;
  justify-content: space-between;
  color:#aaa;
  font-size:28rpx;
  padding: 20rpx 0;
  border-bottom:2rpx solid #000;
}
.order-content{
    display: flex;
  justify-content: space-between;
  color:#4c4b4b;
  font-size:28rpx;
  padding: 20rpx 0;
  border-bottom:2rpx solid #000;
}
.order-container{
  width:100%;
  height:600rpx;
}
.bottom-info{
  position: absolute;
  bottom:0;
  display: flex;
  justify-content: space-around;
  width:100%;
  padding-bottom: 30rpx;
  font-size: 32rpx;
}